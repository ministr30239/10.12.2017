#include <iostream>
using namespace std;
int main(){
int num = 5;
int n;
cout<<"Enter the number od elements ";
cin>>n;
int sum,min;
int *a=new int [num-1];
for (int i=0;i<num; i++){
cout<<endl<<"Element ";
cin>>a[i%num];
}
min=1;
int x;
for (int i=num;i<n;i++){
cout<<endl<<"Element ";
cin>>x;
if (a[i%num]<min) min=a[i%num];
if (x+min<sum) sum=x+min;
a[i%num]= x;
}
cout<<endl<<"Sum "<<sum;
return 0;
}
